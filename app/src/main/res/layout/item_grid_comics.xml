<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/padding_tiny"
    android:layout_marginVertical="@dimen/margin_tiny"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_thumbnail_comic"
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:background="@drawable/background_white"
        android:contentDescription="@string/thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/thumbnail" />

    <TextView
        android:id="@+id/textView_thumbnail_comic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/imageView_thumbnail_comic"
        app:layout_constraintTop_toBottomOf="@id/imageView_thumbnail_comic"
        tools:text="#96" />

</androidx.constraintlayout.widget.ConstraintLayout>